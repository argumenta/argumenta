
*.argumenta, *.argumenta *.argumenta-bootstrap

  // Elements

  form
    form-style()
    margin: 10px
    padding: 10px

    input, textarea, button
      fontSans()

    input
      height: 2em

    input, textarea
      input-style()
      margin: 5px
      padding: 3px
      border: 1px solid #fff

    input:focus, textarea:focus
      outline: none
      border: 1px solid #2af
      shadow(0px, 3px, #08f)

  label
    margin: 5px

  button
    button-style()
    font-weight: bold
    margin: 5px
    padding: 5px

  button:hover
    textShadow(0px, 4px, #fff)

  ul
    list-style: none
