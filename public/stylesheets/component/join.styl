
*.argumenta, *.argumenta *.argumenta-bootstrap

  // Join

  .show-join
    display: inline-block
    margin: 5px
    background: hsl(204, 100%, 50%)

  .show-join:hover
    background: hsl(204, 100%, 40%)

  .modal-background
    display: none
    position: fixed
    z-index: 2
    top: 0
    right: 0
    height: 100%
    width: 100%
    background: rgba(0,0,0,0.5)

  .join-modal, .login-modal
    display: none
    position: fixed
    z-index: 10
    top: 15%
    right: 50%
    margin-top: 0px
    margin-right: -140px
    text-align: center

  .join-header, .login-header
    font-size: 24px
    color: #fff
    text-shadow: 2px 2px 10px #222

  form.join
    display: inline-block
    text-align: center

    li
      text-align: right

    label
      display: inline-block
