
*.argumenta

  // Intro

  .intro
    background: linear-gradient(
      left,
      rgb(0, 204, 255) -10%,
      rgb(36, 0, 65) 40%,
      rgb(0, 44, 65) 60%,
      rgb(255, 0, 194) 110%
    )
    color: #fff
    margin: 0
    overflow: auto
    position: relative
    text-shadow: 0px 2px 2px rgba(0,0,0,0.5)
    z-index: 0

  .intro canvas#stars
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    z-index: -1

  .intro .tagline-container
    text-align: center
    margin: 10px

  .intro .tagline-container h1
    font-weight: bold
